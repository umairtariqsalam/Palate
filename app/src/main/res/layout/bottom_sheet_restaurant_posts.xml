<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Restaurant Info Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Header with restaurant name and close button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Restaurant Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/close"
                android:tint="@color/text_secondary_light"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_restaurant_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Crowd Density Status -->
        <LinearLayout
            android:id="@+id/ll_crowd_density"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/crowd_density_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <View
                android:id="@+id/v_crowd_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_crowd_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading crowd status..."
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_crowd_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please wait..."
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_feedback_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 feedbacks"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- Feedback Buttons -->
        <LinearLayout
            android:id="@+id/ll_feedback_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_not_crowded"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Not Crowded"
                android:textSize="12sp"
                android:background="@drawable/button_crowd_feedback_orange"
                android:backgroundTint="@null"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_moderately_crowded"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="Moderate"
                android:textSize="12sp"
                android:background="@drawable/button_crowd_feedback_orange"
                android:backgroundTint="@null"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_very_crowded"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Very Crowded"
                android:textSize="12sp"
                android:background="@drawable/button_crowd_feedback_orange"
                android:backgroundTint="@null"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Navigation Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_navigate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get direction"
            android:textColor="@color/white"
            android:background="@drawable/button_navigation_background"
            android:drawableStart="@drawable/ic_navigation"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Posts Count Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Related Posts"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_posts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Posts List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_posts"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <!-- No Posts Message -->
    <TextView
        android:id="@+id/tv_no_posts"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:text="No posts for this restaurant yet.\nBe the first to review!"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#999999"
        android:visibility="gone" />

</LinearLayout>

