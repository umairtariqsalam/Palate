<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Header Section -->
        <LinearLayout
            android:id="@+id/heroSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- header bar for viewing other profiles -->
            <FrameLayout
                android:id="@+id/headerBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/btnBackProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back"
                    android:padding="8dp"
                    android:layout_gravity="start|center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    app:tint="@color/profile_text_primary" />

                <!-- app name centered -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Palate"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/logo_primary"
                        android:fontFamily="sans-serif-medium" />
                    
                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/logo_accent"
                        android:layout_marginStart="-10dp"
                        android:layout_marginTop="-10dp" />
                        
                </LinearLayout>

            </FrameLayout>

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Avatar -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    app:civ_border_width="0dp"
                    app:civ_border_color="@color/logo_primary" />

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvDisplayName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username_placeholder"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvBio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/bio_placeholder"
                        android:textSize="14sp"
                        android:textColor="@color/profile_text_secondary"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- Metric Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Credibility Card -->
                <LinearLayout
                    android:id="@+id/credibilityCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/credibility_card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_verified_user"
                        app:tint="@color/logo_accent"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/credibility_label"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/logo_accent"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvCredibilityScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/credibility_placeholder"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/logo_accent"
                            android:fontFamily="sans-serif-medium" />


                    </LinearLayout>

                </LinearLayout>

                <!-- Experience Card -->
                <LinearLayout
                    android:id="@+id/experienceCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/experience_card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_trending_up"
                        app:tint="@color/profile_warning"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/experience_label"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_warning"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvExperienceScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/experience_placeholder"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_warning"
                            android:fontFamily="sans-serif-medium" />


                    </LinearLayout>

                </LinearLayout>

                <!-- Engagement Card -->
                <LinearLayout
                    android:id="@+id/engagementCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/engagement_card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_trending_up"
                        app:tint="@color/profile_success"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/engagement_label"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_success"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvEngagementScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/engagement_placeholder"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_success"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="-8dp"
            app:layout_constraintTop_toBottomOf="@id/heroSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Tab Navigation -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:elevation="1dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextColor="@color/profile_text_secondary"
                app:tabSelectedTextColor="@color/logo_primary"
                app:tabIndicatorColor="@color/logo_primary"
                app:tabIndicatorHeight="2dp"
                app:tabIndicatorGravity="bottom"
                app:tabRippleColor="@android:color/transparent">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviews_tab" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_tab" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics_tab" />

            </com.google.android.material.tabs.TabLayout>

            <!-- Reviews Tab Content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reviewsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Reviews Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyReviewsLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_restaurant"
                        android:alpha="0.3"
                        app:tint="@color/profile_text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/no_reviews_yet"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/start_exploring_message"
                        android:textSize="14sp"
                        android:textColor="@color/profile_text_secondary"
                        android:gravity="center"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Activity Tab Content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activityContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:visibility="gone">

                <!-- Activity Feed -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvActivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyActivityLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_comments"
                        android:alpha="0.3"
                        app:tint="@color/profile_text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/no_activity_yet"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/activity_empty_message"
                        android:textSize="14sp"
                        android:textColor="@color/profile_text_secondary"
                        android:gravity="center"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Analytics Tab Content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/statsContentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:visibility="gone">

                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Row 1 - Main Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:id="@+id/totalReviewsCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/metric_card"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_reviews_label"
                                android:textSize="10sp"
                                android:textColor="@color/profile_text_tertiary"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tvTotalReviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/credibility_placeholder"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/logo_primary"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/reviews_written"
                                android:textSize="11sp"
                                android:textColor="@color/profile_text_secondary"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/averageRatingCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/metric_card"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/average_rating_label"
                                android:textSize="10sp"
                                android:textColor="@color/profile_text_tertiary"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tvAverageRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/rating_placeholder"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/profile_warning"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/stars_average"
                                android:textSize="11sp"
                                android:textColor="@color/profile_text_secondary"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Cuisine Diversity -->
                    <LinearLayout
                        android:id="@+id/cuisineDiversityContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/metric_card"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cuisine Diversity"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_text_primary"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="12dp" />

                        <!-- Categories Section -->
                        <LinearLayout
                            android:id="@+id/categoriesSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Categories Explored"
                                android:textSize="12sp"
                                android:textColor="@color/profile_text_secondary"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvCategoriesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/logo_primary"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginEnd="8dp" />

                            <ImageView
                                android:id="@+id/ivCategoriesArrow"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_down"
                                app:tint="@color/profile_text_tertiary" />

                        </LinearLayout>

                        <!-- Categories Dropdown -->
                        <LinearLayout
                            android:id="@+id/categoriesDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:background="@drawable/rounded_background"
                            android:padding="12dp"
                            android:layout_marginBottom="8dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvCategories"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <!-- Regions Section -->
                        <LinearLayout
                            android:id="@+id/regionsSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Regions Visited"
                                android:textSize="12sp"
                                android:textColor="@color/profile_text_secondary"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvRegionsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/profile_warning"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginEnd="8dp" />

                            <ImageView
                                android:id="@+id/ivRegionsArrow"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_down"
                                app:tint="@color/profile_text_tertiary" />

                        </LinearLayout>

                        <!-- Regions Dropdown -->
                        <LinearLayout
                            android:id="@+id/regionsDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:background="@drawable/rounded_background"
                            android:padding="12dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvRegions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Row 2 - Secondary Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:id="@+id/totalRestaurantsCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/metric_card"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/restaurants_label"
                                android:textSize="10sp"
                                android:textColor="@color/profile_text_tertiary"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tvTotalRestaurants"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/experience_placeholder"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/logo_accent"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/unique_places"
                                android:textSize="11sp"
                                android:textColor="@color/profile_text_secondary"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/totalVotesCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/metric_card"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/community_votes_label"
                                android:textSize="10sp"
                                android:textColor="@color/profile_text_tertiary"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tvTotalVotes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/engagement_placeholder"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/profile_success"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/votes_received"
                                android:textSize="11sp"
                                android:textColor="@color/profile_text_secondary"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>


                    <!-- Member Since Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/metric_card"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_verified"
                            app:tint="@color/logo_accent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/member_since_label"
                                android:textSize="10sp"
                                android:textColor="@color/profile_text_tertiary"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tvMemberSinceStat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text=""
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/profile_text_primary"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMemberDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/profile_text_secondary"
                            android:fontFamily="sans-serif"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>